             </LinearLayout>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grayLight"

                android:padding="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="110dp"
                android:layout_marginBottom="56dp"
                tools:itemCount="5"
                tools:listitem="@layout/child_row" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:elevation="5dp">

            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignStart="@+id/fmHeading"
                android:layout_centerInParent="true"
                android:layout_marginTop="-16dp"
                android:elevation="8dp"
                android:src="@drawable/app_icon" />

            <TextView
                android:id="@+id/fmHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:background="@drawable/capsule"
                android:backgroundTint="@color/colorAccent"
                android:backgroundTintMode="multiply"
                android:elevation="1dp"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal|center_vertical"
                android:minHeight="56dp"
                android:radius="10dp"
                android:text="@{`CHILDREN OF `+mwra.h221}"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/fmHeading"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="6dp"
                android:padding="2dp"
                android:src="@drawable/ic_person_add"
                app:borderWidth="0dp"
                app:elevation="6dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/navigation"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="56dp"
            android:background="@color/whiteOverlay"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:elevation="50dp">

            <Button
                android:id="@+id/btn_End"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/button_shape_red"
                android:drawableTint="#ea0000"
                android:onClick="btnEnd"
                android:text="Cancel"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_Rand"

                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/button_shape_red"
                android:backgroundTint="@color/girl_pink"
                android:backgroundTintMode="screen"
                android:drawableTint="#eaea00"
                android:elevation="12dp"
                android:onClick="btnRand"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:shadowColor="@color/redDark"
                android:text="Select Child"
                android:textColor="@color/white"
                android:visibility="invisible" />


            <Button
                android:id="@+id/btn_Continue"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/button_shape_green"
                android:drawableTint="#00ea00"
                android:enabled="false"
                android:onClick="btnContinue"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Continue"
                android:textColor="@color/white"
                android:visibility="invisible" />

        </LinearLayout>
    </RelativeLayout>


</layout>