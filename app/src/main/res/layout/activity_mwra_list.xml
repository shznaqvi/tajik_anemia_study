        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:background="@drawable/top_round_shape"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="56dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grayLight" />

                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <TextView
                         android:id="@+id/totalmember"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:drawableStart="@drawable/ic_members"
                         android:drawablePadding="8dp"
                         android:gravity="center_vertical"
                         android:padding="8dp"
                         android:text="TEXT"
                         android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

                     <TextView
                         android:id="@+id/completedmember"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:drawableStart="@drawable/ic_members_done"
                         android:drawablePadding="8dp"
                         android:gravity="center_vertical"
                         android:padding="8dp"
                         android:text="TEXT"
                         android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />
                 </LinearLayout>-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grayLight"

                    android:padding="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMembers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="110dp"
                    android:layout_marginEnd="110dp"
                    android:layout_marginBottom="56dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:elevation="5dp">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_alignStart="@+id/fmHeading"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-16dp"
                    android:elevation="8dp"
                    android:src="@drawable/app_icon" />

                <TextView
                    android:id="@+id/fmHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:background="@drawable/capsule"
                    android:elevation="1dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal|center_vertical"
                    android:minHeight="56dp"
                    android:radius="10dp"
                    android:text="FEMALE MEMBERS"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/fmHeading"
                    android:layout_centerInParent="true"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_person_add"
                    android:elevation="8dp"
                    android:foreground="@drawable/ic_person_add"
                    android:foregroundTint="@color/colorAccent" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="56dp"
                android:background="@color/whiteOverlay"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:elevation="50dp">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_shape_red"
                    android:drawableTint="#ea0000"
                    android:onClick="BtnEnd"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_shape_green"
                    android:drawableTint="#00ea00"
                    android:onClick="btnContinue"
                    android:text="Save"
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</layout>