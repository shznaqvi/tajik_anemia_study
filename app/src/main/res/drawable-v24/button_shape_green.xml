<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#868686" />
            <corners android:radius="7dp" />

        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="1dp"
                android:color="#008e91" />
            <corners android:radius="7dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <gradient
                android:angle="90"

                android:centerColor="#008E00"
                android:centerX="30%"
                android:endColor="#d66eff6e"
                android:startColor="#d67fff7f" />

        </shape>
    </item>
</layer-list>